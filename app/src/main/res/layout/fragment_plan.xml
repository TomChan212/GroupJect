<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gym2"
    tools:context=".planFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/plan_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="96dp"
            android:backgroundTint="#000000"
            android:text="Plan Editor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/mid_plan"
            android:layout_width="165dp"
            android:layout_height="92dp"
            android:backgroundTint="#000000"
            android:text="Mild Plan"
            app:layout_constraintEnd_toEndOf="@+id/white10"
            app:layout_constraintStart_toStartOf="@+id/white10"
            app:layout_constraintTop_toBottomOf="@+id/white10" />

        <TextView
            android:id="@+id/tv_plan"
            android:layout_width="285dp"
            android:layout_height="29dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="48dp"
            android:text="You can decide your own plan!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plan_btn" />

        <ImageView
            android:id="@+id/white"
            android:layout_width="288dp"
            android:layout_height="43dp"
            android:layout_marginTop="180dp"
            android:alpha="0.6"
            android:src="@android:drawable/screen_background_light"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_plan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="12dp"
            android:text="Mild Plan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_plan" />

        <ImageView
            android:id="@+id/white10"
            android:layout_width="108dp"
            android:layout_height="31dp"
            android:layout_marginTop="232dp"
            android:alpha="0.6"
            android:src="@android:drawable/screen_background_light"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/mod_plan"
            android:layout_width="149dp"
            android:layout_height="96dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#000000"
            android:text="Moderate Plan"
            app:layout_constraintEnd_toEndOf="@+id/tv_plan3"
            app:layout_constraintStart_toStartOf="@+id/tv_plan3"
            app:layout_constraintTop_toBottomOf="@+id/tv_plan3" />

        <Button
            android:id="@+id/vig_plan"
            android:layout_width="159dp"
            android:layout_height="93dp"
            android:layout_marginTop="9dp"
            android:backgroundTint="#000000"
            android:text="Vigorous Plan"
            app:layout_constraintEnd_toEndOf="@+id/tv_plan4"
            app:layout_constraintStart_toStartOf="@+id/tv_plan4"
            app:layout_constraintTop_toBottomOf="@+id/tv_plan4" />

        <TextView
            android:id="@+id/tv_plan3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="144dp"
            android:text="Moderate Plan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="373dp" />

        <ImageView
            android:id="@+id/white11"
            android:layout_width="148dp"
            android:layout_height="37dp"
            android:layout_marginTop="512dp"
            android:alpha="0.6"
            android:src="@android:drawable/screen_background_light"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.469"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_plan4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Vigorous Plan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationZ="2dp"
            app:layout_constraintEnd_toEndOf="@+id/mod_plan"
            app:layout_constraintHorizontal_bias="0.318"
            app:layout_constraintStart_toStartOf="@+id/mod_plan"
            app:layout_constraintTop_toBottomOf="@+id/mod_plan" />

        <ImageView
            android:id="@+id/white12"
            android:layout_width="142dp"
            android:layout_height="33dp"
            android:layout_marginTop="12dp"
            android:alpha="0.6"
            android:src="@android:drawable/screen_background_light"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mid_plan" />

        <Button
            android:id="@+id/back_plan"
            android:layout_width="99dp"
            android:layout_height="51dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#000000"
            android:text="Back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vig_plan" />

        <ImageView
            android:id="@+id/white6"
            android:layout_width="240dp"
            android:layout_height="32dp"
            android:layout_marginTop="112dp"
            android:alpha="0.6"
            android:src="@android:drawable/screen_background_light"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.859"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/plan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Current plan:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/plan_btn"
            app:layout_constraintStart_toEndOf="@+id/plan_btn"
            app:layout_constraintTop_toTopOf="@+id/plan_btn"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/plan_status2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="plan"
            android:textColor="#FF5722"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/plan_status"
            app:layout_constraintStart_toEndOf="@+id/plan_status"
            app:layout_constraintTop_toTopOf="@+id/plan_status"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>